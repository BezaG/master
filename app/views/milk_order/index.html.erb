<%- model_class = MilkOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:tel) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:milk_id) %></th>
      <th><%= model_class.human_attribute_name(:daily_quantity) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @milk_orders.each do |milk_order| %>
      <tr>
        <td><%= link_to milk_order.id, milk_order_path(milk_order) %></td>
        <td><%= milk_order.user %></td>
        <td><%= milk_order.company %></td>
        <td><%= milk_order.tel %></td>
        <td><%= milk_order.location %></td>
        <td><%= milk_order.price %></td>
        <td><%= milk_order.milk_id %></td>
        <td><%= milk_order.daily_quantity %></td>
        <td><%=l milk_order.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_milk_order_path(milk_order), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      milk_order_path(milk_order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_milk_order_path,
            :class => 'btn btn-primary' %>
