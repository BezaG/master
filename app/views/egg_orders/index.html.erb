<h1>Your orders</h1>

<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Daily quantity</th>
      <th>Price</th>
      
    </tr>
  </thead>

  <tbody>
    <% @egg_orders.each do |egg_order| %>
      <tr>
        <td><%= egg_order.company %></td>
        <td><%= egg_order.location %></td>
        <td><%= egg_order.daily_quantity %></td>
        <td><%= number_to_currency(egg_order.price) %></td>
        <% if can? :update, egg_order %>
          <% if current_user.role == "buyer" %>
            <td><%= link_to 'Edit', edit_egg_egg_order_path(egg_order.egg, egg_order) %></td>
          <% end %>
        <% end %>
        <% if can? :delete, egg_order %>
          <td><%= link_to 'Destroy', [egg_order.egg,egg_order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', eggs_path %>
<% if can? :create, @egg.egg_orders.build %>
<%= link_to 'New Egg order', new_egg_egg_order_path %>
<% end %>
