<h1>Listing eggs</h1>

<table>
  <thead>
    <tr>
      
      <th>Company</th>
      <th>Location</th>
      <th>Type of egg</th>
      <th>Daily quantity</th>
      <th>Price</th>
      <th>Reciept</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @eggs.each do |egg| %>
      <tr>
        
        <td><%= egg.company %></td>
        <td><%= egg.location %></td>
        <td><%= egg.type_of_egg %></td>
        <td><%= egg.daily_quantity %></td>
        <td><%= number_to_currency(egg.price) %></td>
        <td><%= egg.reciept %></td>
       <td> <%= link_to raw("<i class='pull-right icon-chevron-right'></i> #{egg.egg_order.count}#{"Orders"} "),egg_egg_orders_path(egg)  %></td>
        <td><%= link_to 'Edit', edit_egg_path(egg) %></td>
        <td><%= link_to 'Destroy', egg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

