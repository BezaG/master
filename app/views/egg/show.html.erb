<%- model_class = Egg -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @egg.user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company) %>:</strong></dt>
  <dd><%= @egg.company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tel) %>:</strong></dt>
  <dd><%= @egg.tel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @egg.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_of_egg) %>:</strong></dt>
  <dd><%= @egg.type_of_egg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daily_quantity) %>:</strong></dt>
  <dd><%= @egg.daily_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @egg.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reciept) %>:</strong></dt>
  <dd><%= @egg.reciept %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              egg_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_egg_path(@egg), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              egg_path(@egg),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
